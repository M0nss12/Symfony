<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Магазин фотоаппаратов{% endblock %}</title>
    
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    
    <style>
        .navbar-brand { font-weight: 600; }
        .card { border: none; box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.15); }
        .table th { border-top: none; font-weight: 600; }
        .breadcrumb { background: transparent; padding-left: 0; }
        .stats-card { border-left: 0.25rem solid; }
        .stats-card .card-body { padding: 1.25rem; }
    </style>
    
    {% block stylesheets %}{% endblock %}
</head>
<body>
    <!-- Навигационное меню -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-4">
        <div class="container">
            <a class="navbar-brand" href="{{ path('app_home') }}">
                <i class="fas fa-camera me-2"></i>Магазин фотоаппаратов
            </a>
            
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_home') }}">
                            <i class="fas fa-home me-1"></i>Главная
                        </a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                            <i class="fas fa-database me-1"></i>Управление данными
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="{{ path('app_camera_index') }}">
                                <i class="fas fa-camera me-2"></i>Фотоаппараты
                            </a></li>
                            <li><a class="dropdown-item" href="{{ path('app_customer_index') }}">
                                <i class="fas fa-users me-2"></i>Клиенты
                            </a></li>
                            <li><a class="dropdown-item" href="{{ path('app_order_index') }}">
                                <i class="fas fa-shopping-cart me-2"></i>Заказы
                            </a></li>
                            <li><a class="dropdown-item" href="{{ path('app_review_index') }}">
                                <i class="fas fa-star me-2"></i>Отзывы
                            </a></li>
                        </ul>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_camera_new') }}">
                            <i class="fas fa-plus me-1"></i>Добавить фотоаппарат
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Основной контент -->
    <div class="container">
        <!-- Хлебные крошки -->
        <nav aria-label="breadcrumb" class="mb-4">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="{{ path('app_home') }}">Главная</a></li>
                {% block breadcrumbs %}{% endblock %}
            </ol>
        </nav>

        <!-- Flash сообщения -->
        {% for message in app.flashes('success') %}
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="fas fa-check-circle me-2"></i>{{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        {% endfor %}

        {% for message in app.flashes('error') %}
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="fas fa-exclamation-circle me-2"></i>{{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        {% endfor %}

        <!-- Заголовок страницы -->
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="h3 mb-0">{% block page_title %}Магазин фотоаппаратов{% endblock %}</h1>
            {% block page_actions %}{% endblock %}
        </div>

        <!-- Основной контент -->
        {% block body %}{% endblock %}
    </div>

    <!-- Футер -->
    <footer class="bg-dark text-light mt-5 py-4">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <h5><i class="fas fa-camera me-2"></i>Магазин фотоаппаратов</h5>
                    <p class="mb-0">Лучший выбор фототехники по доступным ценам</p>
                </div>
                <div class="col-md-6 text-md-end">
                    <p class="mb-0">&copy; 2024 Магазин фотоаппаратов. Все права защищены.</p>
                </div>
            </div>
        </div>
    </footer>

    <!-- Bootstrap 5 JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- Кастомные скрипты -->
    <script>
        // Подтверждение удаления
        function confirmDelete(message = 'Вы уверены, что хотите удалить эту запись?') {
            return confirm(message);
        }

        // Автоматическое скрытие alert через 5 секунд
        document.addEventListener('DOMContentLoaded', function() {
            setTimeout(function() {
                var alerts = document.querySelectorAll('.alert');
                alerts.forEach(function(alert) {
                    var bsAlert = new bootstrap.Alert(alert);
                    bsAlert.close();
                });
            }, 5000);
        });
    </script>

    {% block javascripts %}{% endblock %}
</body>
</html>