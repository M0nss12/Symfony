{% extends 'base.html.twig' %}

{% block title %}Фотоаппараты - Магазин фотоаппаратов{% endblock %}

{% block breadcrumbs %}
    <li class="breadcrumb-item active">Фотоаппараты</li>
{% endblock %}

{% block page_actions %}
    <a href="{{ path('app_camera_new') }}" class="btn btn-primary">
        <i class="fas fa-plus me-1"></i>Добавить фотоаппарат
    </a>
{% endblock %}

{% block body %}
<div class="card">
    <div class="card-header">
        <h5 class="card-title mb-0">Список фотоаппаратов</h5>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Модель</th>
                        <th>Бренд</th>
                        <th>Цена</th>
                        <th>Мегапиксели</th>
                        <th>Тип сенсора</th>
                        <th>На складе</th>
                        <th>Дата создания</th>
                        <th>Действия</th>
                    </tr>
                </thead>
                <tbody>
                {% for camera in pagination %}
                    <tr>
                        <td>
                            <strong>{{ camera.model }}</strong>
                            <br>
                            <small class="text-muted">
                                {% if camera.wifi %}<i class="fas fa-wifi me-1" title="Wi-Fi"></i>{% endif %}
                                {% if camera.bluetooth %}<i class="fas fa-bluetooth me-1" title="Bluetooth"></i>{% endif %}
                            </small>
                        </td>
                        <td>{{ camera.brand }}</td>
                        <td>
                            <span class="fw-bold text-primary">{{ camera.price }} €</span>
                        </td>
                        <td>{{ camera.megapixels }} MP</td>
                        <td>
                            <span class="badge bg-secondary">{{ camera.sensorType }}</span>
                        </td>
                        <td>
                            <span class="badge bg-{{ camera.stockQuantity > 0 ? 'success' : 'danger' }}">
                                {{ camera.stockQuantity }}
                            </span>
                        </td>
                        <td>
                            <small class="text-muted">{{ camera.createdAt|date('d.m.Y H:i') }}</small>
                        </td>
                        <td>
                            <div class="btn-group btn-group-sm">
                                <a href="{{ path('app_camera_show', {'id': camera.id}) }}" 
                                   class="btn btn-info" 
                                   title="Просмотреть">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a href="{{ path('app_camera_edit', {'id': camera.id}) }}" 
                                   class="btn btn-warning" 
                                   title="Редактировать">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <form method="post" 
                                      action="{{ path('app_camera_delete', {'id': camera.id}) }}" 
                                      onsubmit="return confirm('Вы уверены, что хотите удалить этот фотоаппарат?');"
                                      style="display: inline;">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ camera.id) }}">
                                    <button class="btn btn-danger" title="Удалить">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="8" class="text-center py-4">
                            <i class="fas fa-camera fa-3x text-muted mb-3"></i>
                            <p class="text-muted">Нет доступных фотоаппаратов</p>
                            <a href="{{ path('app_camera_new') }}" class="btn btn-primary">
                                Добавить первый фотоаппарат
                            </a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>

        <!-- Пагинация -->
        <div class="d-flex justify-content-between align-items-center mt-4">
            <div class="text-muted">
                Показано {{ pagination|length }} из {{ pagination.getTotalItemCount }} записей
            </div>
            <div class="navigation">
                {{ knp_pagination_render(pagination) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}