{% extends 'base.html.twig' %}

{% block title %}Клиенты - Магазин фотоаппаратов{% endblock %}

{% block breadcrumbs %}
    <li class="breadcrumb-item active">Клиенты</li>
{% endblock %}

{% block page_actions %}
    <a href="{{ path('app_customer_new') }}" class="btn btn-primary">
        <i class="fas fa-plus me-1"></i>Добавить клиента
    </a>
{% endblock %}

{% block body %}
<div class="card">
    <div class="card-header">
        <h5 class="card-title mb-0">Список клиентов</h5>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Имя</th>
                        <th>Email</th>
                        <th>Телефон</th>
                        <th>Город</th>
                        <th>Дата регистрации</th>
                        <th>Статус</th>
                        <th>Действия</th>
                    </tr>
                </thead>
                <tbody>
                {% for customer in pagination %}
                    <tr>
                        <td>
                            <strong>{{ customer.firstName }} {{ customer.lastName }}</strong>
                            <br>
                            <small class="text-muted">{{ customer.address }}</small>
                        </td>
                        <td>{{ customer.email }}</td>
                        <td>{{ customer.phone }}</td>
                        <td>{{ customer.city }}</td>
                        <td>{{ customer.registrationDate|date('d.m.Y') }}</td>
                        <td>
                            {% if customer.isActive %}
                                <span class="badge bg-success">Активен</span>
                            {% else %}
                                <span class="badge bg-danger">Неактивен</span>
                            {% endif %}
                        </td>
                        <td>
                            <div class="btn-group btn-group-sm">
                                <a href="{{ path('app_customer_show', {'id': customer.id}) }}" 
                                   class="btn btn-info" 
                                   title="Просмотреть">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a href="{{ path('app_customer_edit', {'id': customer.id}) }}" 
                                   class="btn btn-warning" 
                                   title="Редактировать">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <form method="post" 
                                      action="{{ path('app_customer_delete', {'id': customer.id}) }}" 
                                      onsubmit="return confirm('Вы уверены, что хотите удалить этого клиента?');"
                                      style="display: inline;">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ customer.id) }}">
                                    <button class="btn btn-danger" title="Удалить">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="7" class="text-center py-4">
                            <i class="fas fa-users fa-3x text-muted mb-3"></i>
                            <p class="text-muted">Нет зарегистрированных клиентов</p>
                            <a href="{{ path('app_customer_new') }}" class="btn btn-primary">
                                Добавить первого клиента
                            </a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>

        <!-- Пагинация -->
        <div class="d-flex justify-content-between align-items-center mt-4">
            <div class="text-muted">
                Показано {{ pagination|length }} из {{ pagination.getTotalItemCount }} записей
            </div>
            <div class="navigation">
                {{ knp_pagination_render(pagination) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}