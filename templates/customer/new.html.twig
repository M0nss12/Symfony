{% extends 'base.html.twig' %}

{% block title %}Добавить клиента - Магазин фотоаппаратов{% endblock %}

{% block breadcrumbs %}
    <li class="breadcrumb-item"><a href="{{ path('app_customer_index') }}">Клиенты</a></li>
    <li class="breadcrumb-item active">Добавить</li>
{% endblock %}

{% block page_actions %}
    <a href="{{ path('app_customer_index') }}" class="btn btn-secondary">
        <i class="fas fa-arrow-left me-1"></i>Назад к списку
    </a>
{% endblock %}

{% block body %}
<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="fas fa-plus me-2"></i>Добавить нового клиента
                </h5>
            </div>
            <div class="card-body">
                {{ form_start(form) }}
                    <div class="row">
                        <div class="col-md-6">
                            {{ form_row(form.first_name) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_row(form.last_name) }}
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6">
                            {{ form_row(form.email) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_row(form.phone) }}
                        </div>
                    </div>
                    
                    {{ form_row(form.address) }}
                    
                    <div class="row">
                        <div class="col-md-6">
                            {{ form_row(form.city) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_row(form.zip_code) }}
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6">
                            {{ form_row(form.registration_date) }}
                        </div>
                        <div class="col-md-6">
                            <div class="form-check form-switch mt-4">
                                {{ form_widget(form.is_active) }}
                                {{ form_label(form.is_active) }}
                            </div>
                        </div>
                    </div>
                    
                    <div class="mt-4">
                        <button type="submit" class="btn btn-success">
                            <i class="fas fa-save me-2"></i>Сохранить
                        </button>
                        <a href="{{ path('app_customer_index') }}" class="btn btn-secondary">
                            <i class="fas fa-times me-2"></i>Отмена
                        </a>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}