{% extends 'base.html.twig' %}

{% block title %}Заказы - Магазин фотоаппаратов{% endblock %}

{% block breadcrumbs %}
    <li class="breadcrumb-item active">Заказы</li>
{% endblock %}

{% block page_actions %}
    <a href="{{ path('app_order_new') }}" class="btn btn-primary">
        <i class="fas fa-plus me-1"></i>Создать заказ
    </a>
{% endblock %}

{% block body %}
<div class="card">
    <div class="card-header">
        <h5 class="card-title mb-0">Список заказов</h5>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Клиент</th>
                        <th>Фотоаппарат</th>
                        <th>Количество</th>
                        <th>Сумма</th>
                        <th>Статус</th>
                        <th>Дата заказа</th>
                        <th>Действия</th>
                    </tr>
                </thead>
                <tbody>
                {% for order in pagination %}
                    <tr>
                        <td>#{{ order.id }}</td>
                        <td>
                            <strong>{{ order.customer.firstName }} {{ order.customer.lastName }}</strong>
                            <br>
                            <small class="text-muted">{{ order.customer.email }}</small>
                        </td>
                        <td>
                            {{ order.camera.brand }} {{ order.camera.model }}
                            <br>
                            <small class="text-muted">{{ order.camera.price }} €</small>
                        </td>
                        <td>{{ order.quantity }} шт.</td>
                        <td>
                            <span class="fw-bold text-success">{{ order.totalPrice }} €</span>
                        </td>
                        <td>
                            {% if order.status == 'pending' %}
                                <span class="badge bg-warning">В ожидании</span>
                            {% elseif order.status == 'processing' %}
                                <span class="badge bg-info">В обработке</span>
                            {% elseif order.status == 'shipped' %}
                                <span class="badge bg-primary">Отправлен</span>
                            {% elseif order.status == 'delivered' %}
                                <span class="badge bg-success">Доставлен</span>
                            {% else %}
                                <span class="badge bg-danger">Отменен</span>
                            {% endif %}
                        </td>
                        <td>
                            <small class="text-muted">{{ order.orderDate|date('d.m.Y H:i') }}</small>
                        </td>
                        <td>
                            <div class="btn-group btn-group-sm">
                                <a href="{{ path('app_order_show', {'id': order.id}) }}" 
                                   class="btn btn-info" 
                                   title="Просмотреть">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a href="{{ path('app_order_edit', {'id': order.id}) }}" 
                                   class="btn btn-warning" 
                                   title="Редактировать">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <form method="post" 
                                      action="{{ path('app_order_delete', {'id': order.id}) }}" 
                                      onsubmit="return confirm('Вы уверены, что хотите удалить этот заказ?');"
                                      style="display: inline;">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ order.id) }}">
                                    <button class="btn btn-danger" title="Удалить">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="8" class="text-center py-4">
                            <i class="fas fa-shopping-cart fa-3x text-muted mb-3"></i>
                            <p class="text-muted">Нет созданных заказов</p>
                            <a href="{{ path('app_order_new') }}" class="btn btn-primary">
                                Создать первый заказ
                            </a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>

        <!-- Пагинация -->
        <div class="d-flex justify-content-between align-items-center mt-4">
            <div class="text-muted">
                Показано {{ pagination|length }} из {{ pagination.getTotalItemCount }} записей
            </div>
            <div class="navigation">
                {{ knp_pagination_render(pagination) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}