{% extends 'base.html.twig' %}

{% block title %}Заказ #{{ order.id }} - Магазин фотоаппаратов{% endblock %}

{% block breadcrumbs %}
    <li class="breadcrumb-item"><a href="{{ path('app_order_index') }}">Заказы</a></li>
    <li class="breadcrumb-item active">Просмотр</li>
{% endblock %}

{% block page_actions %}
    <div class="btn-group">
        <a href="{{ path('app_order_index') }}" class="btn btn-secondary">
            <i class="fas fa-arrow-left me-1"></i>Назад к списку
        </a>
        <a href="{{ path('app_order_edit', {'id': order.id}) }}" class="btn btn-warning">
            <i class="fas fa-edit me-1"></i>Редактировать
        </a>
    </div>
{% endblock %}

{% block body %}
<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Информация о заказе #{{ order.id }}</h5>
            </div>
            <div class="card-body">
                <table class="table table-bordered">
                    <tbody>
                        <tr>
                            <th width="200">Клиент</th>
                            <td>
                                <strong>{{ order.customer.firstName }} {{ order.customer.lastName }}</strong>
                                <br>
                                <small class="text-muted">{{ order.customer.email }} | {{ order.customer.phone }}</small>
                            </td>
                        </tr>
                        <tr>
                            <th>Фотоаппарат</th>
                            <td>
                                <strong>{{ order.camera.brand }} {{ order.camera.model }}</strong>
                                <br>
                                <small class="text-muted">{{ order.camera.megapixels }}MP • {{ order.camera.sensorType }} • {{ order.camera.price }} €</small>
                            </td>
                        </tr>
                        <tr>
                            <th>Количество</th>
                            <td>{{ order.quantity }} шт.</td>
                        </tr>
                        <tr>
                            <th>Общая стоимость</th>
                            <td><span class="h5 text-success">{{ order.totalPrice }} €</span></td>
                        </tr>
                        <tr>
                            <th>Статус</th>
                            <td>
                                {% if order.status == 'pending' %}
                                    <span class="badge bg-warning fs-6">В ожидании</span>
                                {% elseif order.status == 'processing' %}
                                    <span class="badge bg-info fs-6">В обработке</span>
                                {% elseif order.status == 'shipped' %}
                                    <span class="badge bg-primary fs-6">Отправлен</span>
                                {% elseif order.status == 'delivered' %}
                                    <span class="badge bg-success fs-6">Доставлен</span>
                                {% else %}
                                    <span class="badge bg-danger fs-6">Отменен</span>
                                {% endif %}
                            </td>
                        </tr>
                        <tr>
                            <th>Способ оплаты</th>
                            <td>
                                {% if order.paymentMethod == 'credit_card' %}
                                    Кредитная карта
                                {% elseif order.paymentMethod == 'paypal' %}
                                    PayPal
                                {% elseif order.paymentMethod == 'bank_transfer' %}
                                    Банковский перевод
                                {% else %}
                                    Наличные при получении
                                {% endif %}
                            </td>
                        </tr>
                        <tr>
                            <th>Дата заказа</th>
                            <td>{{ order.orderDate|date('d.m.Y H:i') }}</td>
                        </tr>
                        <tr>
                            <th>Трек номер</th>
                            <td>
                                {% if order.trackingNumber %}
                                    <span class="badge bg-info">{{ order.trackingNumber }}</span>
                                {% else %}
                                    <span class="text-muted">Не указан</span>
                                {% endif %}
                            </td>
                        </tr>
                        <tr>
                            <th>Дата создания</th>
                            <td>{{ order.createdAt|date('d.m.Y H:i') }}</td>
                        </tr>
                    </tbody>
                </table>
                
                {% if order.shippingAddress %}
                <div class="mt-4">
                    <h6>Адрес доставки:</h6>
                    <p class="text-muted">{{ order.shippingAddress }}</p>
                </div>
                {% endif %}
            </div>
        </div>
    </div>
    
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Действия</h5>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a href="{{ path('app_order_edit', {'id': order.id}) }}" class="btn btn-warning">
                        <i class="fas fa-edit me-2"></i>Редактировать
                    </a>
                    <form method="post" 
                          action="{{ path('app_order_delete', {'id': order.id}) }}" 
                          onsubmit="return confirm('Вы уверены, что хотите удалить этот заказ?');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ order.id) }}">
                        <button class="btn btn-danger w-100">
                            <i class="fas fa-trash me-2"></i>Удалить
                        </button>
                    </form>
                </div>
            </div>
        </div>
        
        <div class="card mt-4">
            <div class="card-header">
                <h5 class="card-title mb-0">Информация о клиенте</h5>
            </div>
            <div class="card-body">
                <p class="mb-1"><strong>{{ order.customer.firstName }} {{ order.customer.lastName }}</strong></p>
                <p class="mb-1 text-muted small">{{ order.customer.email }}</p>
                <p class="mb-1 text-muted small">{{ order.customer.phone }}</p>
                <p class="mb-0 text-muted small">{{ order.customer.address }}, {{ order.customer.city }}</p>
            </div>
        </div>
    </div>
</div>
{% endblock %}